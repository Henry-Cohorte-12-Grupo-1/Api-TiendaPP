    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\build\\index.js",
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "env": {
                "DB_USER": "postgres",
                "DB_PASSWORD": "password",
                "DB_HOST": "localhost",
                "DB_NAME": "tiendapp",
                "DB_PORT": "5432",
                "NODE_ENV": "development",
                "API_PORT": "3001",
                "API_HOST": "localhost",
                "CORS": "http://localhost:3000"
            }
        }
    ]
}
